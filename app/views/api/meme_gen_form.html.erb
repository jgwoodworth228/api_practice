<div class="col-sm-10">
<h1>Enter your top and bottom text to generate meme...</h1>

<!-- Create a form that lets a user enter top and bottom text -->

<form class="form-horizontal" action="/api/meme_gen_process">
  <div class="form-group">
    <label for="top_text" class="col-sm-2 control-label">Top Text</label>
    <div class="col-sm-6">
      <input type="text" name="top_text" class="form-control" id="top_text" placeholder="top text">
    </div>
  </div>

  <div class="form-group">
    <label for="bottom_text" class="col-sm-2 control-label">Bottom Text</label>
    <div class="col-sm-6">
      <input type="text" name="bottom_text" class="form-control" id="bottom_text" placeholder="bottom_text">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
</form>
</div>
